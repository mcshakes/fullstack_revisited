
mixin bookCard(book = {})
  .book
    .book__hero
      h2.title
        if user
          a(href=`/users/${user.id}/books/${book.id}`) #{book.title}
          p #{book.author}
        else
          a(href=`/books/${book.id}`) #{book.title}
          p #{book.author}

    .book__details
      - var title = book.title
      img.book-thumbnail(aria-label=title + " Cover" src=book.image)
