mixin loginForm()
  h1 Login
  form.form(action="/login" method="POST" class="login-form")
    div.form-group
      div.form-row
        label(for="username") Email Address
        input(type="email" name="username" id="username-email" aria-label="email" required)
      div.form-row
        label(for="password") Password
        input(type="password" name="password" id="login-password" aria-label="login-password")
      div.form-row
        input.login-button(type="submit" value="Log In ->")
