extends layout

block content
    section.messages
      if errors
        each error in errors
          p #{error.msg}
    form(action="/search-results" method="POST" class="search-book")
      div.form-group
        div.form-row
          label(for="title") Title:
          input#title.form-control(type="text", placeholder="Small Gods" name="title")
        div.form-row
          button.btn.btn-primary(type="submit" role="submit") Search
