doctype html
<html lang="en">

  head
    title= `${title}`
    link(rel='stylesheet', href='/dist/style.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='/js/main.js')

    block header
        nav.nav
          ul.menu
            if user
              li.nav-item
                a.nav__link(href="/logout") Log Out
                  div(class="bar top")
                  div(class="bar right delay")
                  div(class="bar bottom delay")
                  div(class="bar left")
              li.nav-item
                a.nav__link(href="/") Home
                  div(class="bar top")
                  div(class="bar right delay")
                  div(class="bar bottom delay")
                  div(class="bar left")
            if location === "/"
              li.nav-item
                a.nav__link(href="/register") Register
                  div(class="bar top")
                  div(class="bar right delay")
                  div(class="bar bottom delay")
                  div(class="bar left")
              li.nav-item
                a.nav__link(href="/login") Log In
                  div(class="bar top")
                  div(class="bar right delay")
                  div(class="bar bottom delay")
                  div(class="bar left")

    body
      .content
      != messages("message", locals)
      if errors
        each error, i in errors
          #{error.msg}
      block content
