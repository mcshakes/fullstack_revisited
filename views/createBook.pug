extends layout
include mixins/_bookForm

block content
    header.add-book-header
      h1 Add A Book To Read
      h3 Add the title, description and author. Or search for it below
    section
      .search-option
        h3 Can't remember specifics? Try Searching Instead
          div
            a.btn#search(href=`/search`) Search Books
    section
      if errors
        each error in errors
          p #{error.msg}
      +bookForm
